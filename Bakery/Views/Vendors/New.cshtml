@{
  Layout = "_Layout";
}

<h1>ADD NEW VENDOR DETAILS:</h1>
<form action="/vendors" method="post" class="well">
  <div class="form-group">
    <label for="vendorName">Name of Vendor:</label>
    <input name="vendorName" id="vendorName" type="text" class="form-control" required>
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <input name="description" id="description" type="text" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-block">ADD</button>
</form>