@{
  Layout = "_Layout";
}

<h1>Add a new order for @Model.Name</h1>
<div class="well">
  <form action="/vendors/@Model.Id/orders" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <div class="form-group">
      <label for="orderTitle">Order Title:</label>
      <input id="orderTitle" name="orderTitle" type="text" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="orderDate">Order Date:</label>
      <input id="orderDate" name="orderDate" type="date" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="stringOrderPrice">Price:</label>
      <input id="stringOrderPrice" name="stringOrderPrice" type="double" class="form-control" required>
    </div>
    <div class="form-group">
      <label for="orderDescription">Description:</label>
      <input id="orderDescription" name="orderDescription" type="text" class="form-control" required>
    </div>
    <h4>Invoice paid?</h4>
    <div class="radio">
      <label>
        <input type="radio" name="paid" value="Pending payment" checked>
        No
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="paid" value="Paid">
        Yes
      </label>
    </div>
    <button class="btn btn-block" type="submit">Add Order</button>
  </form>
</div>