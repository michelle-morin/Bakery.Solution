<h3>Add a new order for @Model.Name</h3>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle"></label>
  <input id="orderTitle" name="orderTitle" type="text" required>
  <label for="orderDate"></label>
  <input id="orderDate" name="orderDate" type="date" required>
  <label for="stringOrderPrice"></label>
  <input id="stringOrderPrice" name="stringOrderPrice" type="double" required>
  <label for="orderDescription"></label>
  <input id="orderDescription" name="orderDescription" type="text" required>
  <button type="submit">Add Order</button>
</form>